extends ../../main

block content
    .row
        .col-md-12
            .card
                .card-stats
                    a(href="javascript:history.back()")
                        .card-header.btn(data-background-color="blue")
                            i.material-icons(title="Back") keyboard_arrow_left


                .card-content
                    h2.text-right Search books
                    form(method='post')
                        .form-group.label-floating
                            label.control-label Book
                            input.form-control(type="text", id="book" name="book", pattern="[a-zA-Z]{1,25}")

                        .form-group.label-floating
                            label.control-label Author
                            input.form-control(type="text", id="author" name="author", pattern="[a-zA-Z]{1,25}")

                        .form-group.label-floating
                            label.control-label Publish
                            input.form-control(type="text", id="publish" name="publish", pattern="[a-zA-Z]{1,25}")

                        .row
                            .col-md-6
                                .form-group.label-floating
                                    label.control-label Beginning of the publication period
                                    input.form-control(type="text", id="start_year" name="start_year", pattern="[1-2][0-9][0-9][0-9]")

                            .col-md-6
                                .form-group.label-floating
                                    label.control-label End of publication period
                                    input.form-control(type="text", id="end_year" name="end_year", pattern="[1-2][0-9][0-9][0-9]")

                        .row
                            .col-md-6
                                .form-group.label-floating
                                    label.control-label Minimum price
                                    input.form-control(type="text", id="min_price" name="min_price", pattern="[0-9]{1,5}")

                            .col-md-6
                                .form-group.label-floating
                                    label.control-label Maximum price
                                    input.form-control(type="text", id="max_price" name="max_price", pattern="[0-9]{1,5}")


                        button.btn.btn-primary.btn-block(type="submit" data-background-color="blue") Search

                if list
                    .card-content
                        h2.text-right Books found
                        if list.length !== 0
                            table.table
                                thead.text-primary
                                    th Book
                                    th Author
                                    th Publish
                                    th Publication year
                                    th Price
                                    th Count
                                    th
                                tbody
                                    each book in list
                                        tr
                                            td.text-left
                                                | #{book.book_name}
                                            td.text-left
                                                | #{book.author}
                                            td.text-left
                                                | #{book.publish_name}
                                            td.text-left
                                                | #{book.book_publication}
                                            td.text-left
                                                | #{book.price}
                                            td.text-left
                                                | #{book.count}